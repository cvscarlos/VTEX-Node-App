{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2019"],
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
